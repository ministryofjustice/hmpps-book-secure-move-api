{
  "Person": {
    "type": "object",
    "required": [
      "id",
      "type",
      "attributes"
    ],
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid",
        "example": "88089bbd-8719-4192-b309-f9db9105d3e1",
        "description": "The unique identifier (UUID) of this object"
      },
      "type": {
        "type": "string",
        "example": "people",
        "description": "The type of this object - always `people`"
      },
      "attributes": {
        "type": "object",
        "required": [
          "first_names",
          "last_name"
        ],
        "properties": {
          "first_names": {
            "type": "string",
            "example": "Bob",
            "description": "Person's first names"
          },
          "last_name": {
            "type": "string",
            "example": "Roberts",
            "description": "Person's surname"
          },
          "date_of_birth": {
            "type": "string",
            "format": "date",
            "example": "1965-10-24",
            "description": "Person's date of birth in ISO 8601 format"
          },
          "risk_alerts": {
            "type": "array",
            "items": {
              "$ref": "profile_attribute.json#/ProfileAttribute"
            },
            "description": "Collection of risk alerts that escorts need to be aware of for safety, security and other reasons"
          },
          "health_alerts": {
            "type": "array",
            "items": {
              "$ref": "profile_attribute.json#/ProfileAttribute"
            },
            "description": "Collection of health alerts that escorts need to be aware for the well being of the person and other reasons"
          },
          "court_information": {
            "type": "array",
            "items": {
              "$ref": "profile_attribute.json#/ProfileAttribute"
            },
            "description": "Collection of information that the court needs to be aware of"
          },
          "identifiers": {
            "type": "array",
            "items": {
              "$ref": "profile_identifier.json#/ProfileIdentifier"
            },
            "description": "Collection of identifiers used to identify the person. Different services have various id schemes such police criminal records number, prison number etc. We may need to record several of these."
          }
        }
      },
      "relationships": {
        "type": "object",
        "properties": {
          "gender": {
            "$ref": "gender_reference.json#/GenderReference",
            "description": "Person's gender"
          },
          "ethnicity": {
            "$ref": "ethnicity_reference.json#/EthnicityReference",
            "description": "Person's ethnicity"
          }
        }
      }
    }
  }
}
