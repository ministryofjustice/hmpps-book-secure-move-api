{
  "Person": {
    "type": "object",
    "required": [
      "id",
      "type",
      "attributes"
    ],
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid",
        "example": "88089bbd-8719-4192-b309-f9db9105d3e1"
      },
      "type": {
        "type": "string",
        "example": "people"
      },
      "attributes": {
        "type": "object",
        "required": [
          "first_names",
          "last_name"
        ],
        "properties": {
          "first_names": {
            "type": "string",
            "example": "Bob"
          },
          "last_name": {
            "type": "string",
            "example": "Roberts"
          },
          "date_of_birth": {
            "type": "string",
            "format": "date",
            "example": "1965-10-24"
          },
          "custody_reference": {
            "type": "string",
            "example": "CR451905001"
          },
          "offence_details": {
            "type": "string",
            "example": "Armed Robbery"
          }
        }
      },
      "relationships": {
        "type": "object",
        "properties": {
          "gender": {
            "$ref": "gender_reference.json#/GenderReference"
          },
          "ethnicity": {
            "$ref": "ethnicity_reference.json#/EthnicityReference"
          },
          "risk_alerts": {
            "type": "array",
            "items": {
              "$ref": "move_detail.json#/MoveDetail"
            }
          },
          "health_alerts": {
            "type": "array",
            "items": {
              "$ref": "move_detail.json#/MoveDetail"
            }
          },
          "hold_reasons": {
            "type": "array",
            "items": {
              "$ref": "move_detail.json#/MoveDetail"
            }
          },
          "court_information": {
            "type": "array",
            "items": {
              "$ref": "move_detail.json#/MoveDetail"
            }
          }
        }
      }
    }
  }
}
