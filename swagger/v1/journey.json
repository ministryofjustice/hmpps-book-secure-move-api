{
  "GetJourney": {
    "type": "object",
    "required": [
      "id",
      "type",
      "attributes"
    ],
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid",
        "example": "e3eb792e-7e76-4c8b-a84c-65f09825153f",
        "description": "The unique identifier (UUID) of this object"
      },
      "type": {
        "type": "string",
        "example": "journeys",
        "enum": ["journeys"],
        "description": "The type of this object - always `journeys`"
      },
      "attributes": {
        "type": "object",
        "required": [
          "timestamp",
          "billable"
        ],
        "properties": {
          "timestamp": { "$ref": "timestamp_attribute.json#/Timestamp" },
          "billable": {
            "type": "boolean",
            "example": true,
            "description": "true indicates that the journey is billable, otherwise false"
          },
          "vehicle": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "12345678ABC",
                "description": "Vehicle identification number"
              },
              "registration": {
                "type": "string",
                "example": "AB12 CDE",
                "description": "Vehicle registration number"
              }
            }
          }
        }
      },
      "relationships": {
        "type": "object",
        "required": [
          "from_location",
          "to_location"
        ],
        "properties": {
          "from_location": {
            "$ref": "location_reference.json#/LocationReference1",
            "description": "The location that the journey is coming from"
          },
          "to_location": {
            "$ref": "location_reference.json#/LocationReference2",
            "description": "The location that the journey is going to"
          }
        }
      }
    }
  },
  "PostRedirect": {
    "type": "object",
    "required": [
      "type",
      "attributes"
    ],
    "properties": {
      "type": {
        "type": "string",
        "example": "redirects",
        "enum": ["redirects"],
        "description": "The type of this object - always `redirects`"
      },
      "attributes": {
        "type": "object",
        "required": [
          "timestamp",
          "reason"
        ],
        "properties": {
          "timestamp": { "$ref": "timestamp_attribute.json#/Timestamp" },
          "reason": {
            "type": "string",
            "example": "redirecting because of a request from PMU",
            "description": "reason or note to explain the redirection"
          }
        }
      },
      "relationships": {
        "type": "object",
        "required": [
          "to_location"
        ],
        "properties": {
          "to_location": {
            "$ref": "location_reference.json#/LocationReference2",
            "description": "The location that the move is being redirected to"
          }
        }
      }
    }
  }
}
