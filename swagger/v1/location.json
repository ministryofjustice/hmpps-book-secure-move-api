{
  "Location": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid",
        "example": "bf19c538-3f01-4d69-8200-69748ace1ed1"
      },
      "type": {
        "type": "string",
        "example": "locations"
      },
      "attributes": {
        "type": "object",
        "required": [
          "label",
          "location_type"
        ],
        "properties": {
          "label": {
            "type": "string",
            "example": "Guildford Crown Court"
          },
          "description": {
            "oneOf": [
              { "type": "string" },
              { "type": "null" }
            ]
          },
          "location_type": {
            "type": "string",
            "enum": ["court", "police", "prison"]
          },
          "location_code": {
            "type": "string",
            "example": "BAI",
            "description": "The NOMIS `agency_id`, for prisons this is a 3-letter code"
          }
        }
      }
    }
  }
}
