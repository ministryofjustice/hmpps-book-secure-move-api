{
  "LocationReference": {
    "type": "object",
    "required": [
      "data"
    ],
    "properties": {
      "data": {
        "type": "object",
        "required": ["type", "id"],
        "properties": {
          "type": {
            "type": "string",
            "example": "locations",
            "enum": ["locations"],
            "description": "The type of this object - always `locations`"
          },
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "ea5ace8e-e9ad-4ca3-9977-9bf69e3b6154",
            "description": "The unique identifier (UUID) of the object that this reference points to"
          }
        }
      }
    }
  }
}
