{
  "openapi": "3.0.0",
  "components": {
    "schemas": {
      "PersonReference": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "id": {
                "type": "string",
                "format": "guid"
              }
            }
          }
        }
      },
      "LocationReference": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "id": {
                "type": "string",
                "format": "guid"
              }
            }
          }
        }
      },
      "Location": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "location_type": {
                "type": "string",
                "enum": ["court", "police", "prison"]
              }
            }
          }
        }
      },
      "Person": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "forenames": {
                "type": "string"
              },
              "surname": {
                "type": "string"
              },
              "date_of_birth": {
                "type": "string",
                "format": "date"
              }
            }
          }
        }
      },
      "Move": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "status": {
                "type": "string",
                "enum": ["requested", "scheduled"]
              },
              "time_due": {
                "type": "string",
                "format": "date-time"
              },
              "updated_at": {
                "type": "string",
                "format": "date-time"
              },
              "date": {
                "type": "string",
                "format": "date"
              }
            }
          },
          "relationships": {
            "type": "object",
            "properties": {
              "person": {
                "$ref": "#/components/schemas/PersonReference"
              },
              "from_location": {
                "$ref": "#/components/schemas/LocationReference"
              },
              "to_location": {
                "$ref": "#/components/schemas/LocationReference"
              }
            }
          }
        }
      }
    }
  },
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/moves": {
      "get": {
        "summary": "Returns a list of moves",
        "tags": [
          "Moves"
        ],
        "consumes": [
          "application/vnd.api+json"
        ],
        "parameters": [
          {
            "name": "filter[date_from]",
            "in": "query",
            "description": "Filters results to only include moves on and after the given date, e.g. `2019-05-02`",
            "schema": {
              "type": "string",
              "example": "2019-05-09"
            },
            "format": "date"
          },
          {
            "name": "filter[date_to]",
            "in": "query",
            "description": "Filters results to only include moves up to and including the given date, e.g. `2019-05-09`",
            "schema": {
              "type": "string",
              "example": "2019-05-09"
            },
            "format": "date"
          },
          {
            "name": "filter[status]",
            "in": "query",
            "description": "Filters results to only include moves with the given status",
            "schema": {
              "type": "string",
              "enum": ["pending", "accepted"]
            }
          },
          {
            "name": "filter[from_location_id]",
            "in": "query",
            "type": "string",
            "description": "Filters results to only include moves from the given location",
            "schema": {
              "type": "string"
            },
            "format": "uuid"
          },
          {
            "name": "filter[to_location_id]",
            "in": "query",
            "description": "Filters results to only include moves to the given location",
            "schema": {
              "type": "string"
            },
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/vnd.api+json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "data"
                  ],
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Move"
                      }
                    },
                    "included": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "unauthorized",
            "content": {
              "application/vnd.api+json": {
                "schema": {
                }
              }
            }
          }
        }
      }
    }
  }
}
