{
  "openapi": "3.0.0",
  "components": {
    "schemas": {
      "NotAuthorisedError": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 12345
          },
          "title": {
            "type": "string",
            "example": "Not authorized"
          },
          "detail": {
            "type": "string",
            "example": "You must be logged in to use this service"
          }
        }
      },
      "PersonReference": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "example": "people"
              },
              "id": {
                "type": "string",
                "format": "uuid",
                "example": "ea5ace8e-e9ad-4ca3-9977-9bf69e3b6154"
              }
            }
          }
        }
      },
      "LocationReference": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "example": "locations"
              },
              "id": {
                "type": "string",
                "format": "uuid",
                "example": "3561f372-9f1c-4e13-997e-b11e1647cce1"
              }
            }
          }
        }
      },
      "Location": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "bf19c538-3f01-4d69-8200-69748ace1ed1"
          },
          "type": {
            "type": "string",
            "example": "locations"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "example": "Guildford Crown Court"
              },
              "description": {
                "type": "string"
              },
              "location_type": {
                "type": "string",
                "enum": ["court", "police", "prison"]
              }
            }
          }
        }
      },
      "Person": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "88089bbd-8719-4192-b309-f9db9105d3e1"
          },
          "type": {
            "type": "string",
            "example": "people"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "forenames": {
                "type": "string",
                "example": "Bob"
              },
              "surname": {
                "type": "string",
                "example": "Roberts"
              },
              "date_of_birth": {
                "type": "string",
                "format": "date",
                "example": "1965-10-24"
              }
            }
          }
        }
      },
      "Move": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "f0a91e16-1b0e-4e1f-93fe-319dda9933e6"
          },
          "type": {
            "type": "string",
            "example": "moves"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "example": "moves"
              },
              "status": {
                "type": "string",
                "enum": ["requested", "scheduled"]
              },
              "time_due": {
                "type": "string",
                "format": "date-time"
              },
              "updated_at": {
                "type": "string",
                "format": "date-time"
              },
              "date": {
                "type": "string",
                "format": "date",
                "example": "2019-05-24"
              }
            }
          },
          "relationships": {
            "type": "object",
            "properties": {
              "person": {
                "$ref": "#/components/schemas/PersonReference"
              },
              "from_location": {
                "$ref": "#/components/schemas/LocationReference"
              },
              "to_location": {
                "$ref": "#/components/schemas/LocationReference"
              }
            }
          }
        }
      }
    }
  },
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/moves": {
      "get": {
        "summary": "Returns a list of moves",
        "tags": [
          "Moves"
        ],
        "consumes": [
          "application/vnd.api+json"
        ],
        "parameters": [
          {
            "name": "filter[date_from]",
            "in": "query",
            "description": "Filters results to only include moves on and after the given date, e.g. `2019-05-02`",
            "schema": {
              "type": "string",
              "example": "2019-05-09"
            },
            "format": "date"
          },
          {
            "name": "filter[date_to]",
            "in": "query",
            "description": "Filters results to only include moves up to and including the given date, e.g. `2019-05-09`",
            "schema": {
              "type": "string",
              "example": "2019-05-09"
            },
            "format": "date"
          },
          {
            "name": "filter[status]",
            "in": "query",
            "description": "Filters results to only include moves with the given status",
            "schema": {
              "type": "string",
              "enum": ["pending", "accepted"]
            }
          },
          {
            "name": "filter[from_location_id]",
            "in": "query",
            "type": "string",
            "description": "Filters results to only include moves from the given location",
            "schema": {
              "type": "string"
            },
            "format": "uuid",
            "example": "950ef512-a25f-46d7-8ced-7ad09510659b"
          },
          {
            "name": "filter[to_location_id]",
            "in": "query",
            "description": "Filters results to only include moves to the given location",
            "schema": {
              "type": "string"
            },
            "format": "uuid",
            "example": "92fb1419-04e2-4bda-94e7-e62abaa2f098"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/vnd.api+json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "data"
                  ],
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Move"
                      }
                    },
                    "included": {
                      "type": "array",
                      "items": {
                        "oneOf": [
                          { "$ref": "#/components/schemas/Location" },
                          { "$ref": "#/components/schemas/Person" }
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "unauthorized",
            "content": {
              "application/vnd.api+json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "errors"
                  ],
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/NotAuthorisedError"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
