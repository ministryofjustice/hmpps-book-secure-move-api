{
  "Document": {
    "type": "object",
    "required": [
      "id",
      "type",
      "attributes"
    ],
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid",
        "example": "3ax9c575-5901-4f69-f234-81e489je1ed8",
        "description": "The unique identifier (UUID) of this object"
      },
      "type": {
        "type": "string",
        "example": "documents",
        "enum": ["documents"],
        "description": "The type of this object - always `documents`"
      },
      "attributes": {
        "type": "object",
        "required": [
          "url",
          "filename",
          "filesize",
          "content_type"
        ],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "example": "http://localhost:4000/storage/image.png"
          },
          "filename": {
            "type": "string",
            "example": "file.doc",
            "description": "The name of the uploaded file"
          },
          "filesize": {
            "type": "number",
            "example": "12345678",
            "description": "The size of the uploaded file in bytes"
          },
          "content_type": {
            "type": "string",
            "example": "application/msword",
            "description": "The MIME type of the file"
          }
        }
      }
    }
  }
}
